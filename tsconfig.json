{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "DOM"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "strict": false,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "temp/types",
    "types": [
      "@types/node",
      "@nuxt/types",
      "./src/shim",
      "@nuxtjs/apollo",
      "@types/jest"
    ]
  },
  "include": ["./src"]
}